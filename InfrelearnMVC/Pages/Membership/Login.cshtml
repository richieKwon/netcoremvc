@model InfrelearnMVC.Models.LoginInfo

@{
    ViewBag.Title = "Membership Login";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        
        <form method="Post" asp-controller="Membership" asp-action="Login">

            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserId)
                <input type="text" class="form-control" asp-for="UserId"
                       placeholder="User ID" autofocus/>
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Password)
                <input type="text" class="form-control" asp-for="Password"
                       placeholder="PassWord"/>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

        </form>
    </div>
</div>